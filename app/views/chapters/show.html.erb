<h2>
	Sections In <%= link_to @prose_work.title.titleize, prose_work_url(@prose_work) %> <%= link_to @prose_book.number, prose_book_url(@prose_book) %>.<%= link_to @chapter.number, chapter_url(@chapter) %>, by <%= link_to @author.name.titleize, author_url(@author) %>
</h2>

<div class="topcoat-list">
	<ul class="topcoat-list__container texts-list">
		<% @sections.each do |section| %>
		<li class="topcoat-list__item">
			<%= link_to "#{section.number}", section_url(section) %>
		</li>
		<% end %>
	</ul>
	
</div>