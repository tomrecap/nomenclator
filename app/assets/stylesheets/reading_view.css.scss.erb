/*--------- resets -------*/
html, body, article, section, form, ul, li, form, input, button {
	margin:0;
	border:0;
	outline:0;
	padding:0;
	
	-webkit-appearance:none;
	
	font:inherit;
	vertical-align:baseline;
}

ul {
	list-style:none;
}

body {
	font-size:18px;
	font-family:Helvetica, sans-serif;
	background:white;
	line-height:135%;
}

input, button, .close-vocab-box {
	display:inline-block;
/*	border: 2px solid black;*/
/*	border-radius:5px;*/
	padding:4px 8px;
}

button, .close-vocab-box {
	background:#ccc;	
}

input[type="submit"]:hover, button:hover, .close-vocab-box:hover {
	background:lightgreen;
}

/*-------- layout ----------*/

.main-content {
	display:block;
	position:relative;
	
	width:750px;
	margin-left:auto;
	margin-right:auto;
	
	padding:50px;
	
	background:white;
}

.group:after {
	display:block;
	content:"";
	clear:both;
}

/*------------ LATIN TEXT -----------*/

article.text {
	display:block;
	position:relative;
	float:left;
	width:400px;
}

article.text p {
	padding-bottom:5px;
}

article.text a {
	text-decoration:none;
	font:inherit;
	color:inherit;
}

/*----------- VOCAB LIST --------------*/

#menu-button {
	display:block;
	position:fixed;
	top:0px;
	left:0px;
}

section.vocabulary {
	display:block;
	position:relative;
	float:left;
	width:275px;
	margin-left:25px;
	padding:25px;
	background:gainsboro;
}

section.vocabulary > ul {
}

ul.vocabulary-entries > li {
	padding-bottom:5px;
	padding-top:10px;
	border-bottom:1px solid #ccc;
}

i.expansion {
	display:inline-block;
	height:12px;
	width:12px;
	background: url(<%= asset_path "icons-12.png" %>) no-repeat 0 0;
	background-position: 0 -124px; width: 12px; height: 12px;
}

i.expansion.true {
	background-position: 0 -186px; width: 12px; height: 12px;
}

button.edit {
	display:inline-block;
	position:relative;
	top:0px;

	height:13px;
	width:13px;

	padding:0px;
	border: 1px solid #000;
	background: url(<%= asset_path "icons-12.png" %>) no-repeat 0 0;
	background-position: 0 -63px; width: 13px; height: 13px;
}

button.edit:hover {
	background-position: 0 0px; width: 13px; height: 13px;
}

button.edit:active {
	position:relative;
	top:2px;
}

input.editable-input {
	display:inline-block;
	padding:0;
	margin:0;
	outline:0;
	border:0;
	border-bottom:1px dashed #000;
	background:transparent;
	height:20px;
	max-width:120px;
}

.editable-buttons > button {
	display:inline-block;
	position:relative;
	padding:0px 5px;
	margin:0;
	font-size:12px;
	top:-3px;
}

.editable-buttons > button:active {
	top:-1px;
}

i.delete {
	display:inline-block;
	height:12px;
	width:12px;
	background: url(<%= asset_path "icons-12.png" %>) no-repeat 0 0;
	background-position: 0 -310px; width: 12px; height: 12px;
}

i.delete:hover {
	background-position: 0 -248px; width: 12px; height: 12px;
}

i.delete:active {
	position:relative;
	top:2px;
}

.vocab-box-buttons, .close-vocab-box {
	margin-top:5px;
	margin-bottom:5px;
}

.vocab-box-buttons:active, .close-vocab-box {
	position:relative;
	top:2px;
}

/*----------- MOBILE -------------*/
/*@media (max-width: 640px) {*/
@media only screen and (-webkit-min-device-pixel-ratio : 1.5), only screen and (min-device-pixel-ratio : 1.5) {

	body {
		width:220px;
	}

	.main-content {
		width:220px;
		padding:0;
	}

	article.text {
		width:220px;
		padding:25px 50px;
	}
	
	section.vocabulary {
		width:280px;
		padding:20px;
		margin:0;
	}

}