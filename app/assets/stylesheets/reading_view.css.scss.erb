/*--------- resets -------*/
html, body, article, section, form, ul, li, form, input, button {
	margin:0;
	border:0;
	outline:0;
	padding:0;
	
	-webkit-appearance:none;
	
	font:inherit;
	vertical-align:baseline;
}

ul {
	list-style:none;
}

body {
	font-size:18px;
	font-family:Helvetica, sans-serif;
	background:white;
	line-height:135%;
}

input, button {
	display:inline-block;
/*	border: 2px solid black;*/
/*	border-radius:5px;*/
	padding:4px;
}

input[type="submit"]:hover, button:hover {
	background:lightgreen;
}

/*-------- layout ----------*/

.main-content {
	display:block;
	position:relative;
	
	width:750px;
	margin-left:auto;
	margin-right:auto;
	
	padding:50px;
	
	background:white;
}

.group:after {
	display:block;
	content:"";
	clear:both;
}

article.text {
	display:block;
	position:relative;
	float:left;
	width:400px;
}

article.text p {
	padding-bottom:5px;
}

article.text a {
	text-decoration:none;
	font:inherit;
	color:inherit;
}

section.vocabulary {
	display:block;
	position:relative;
	float:left;
	width:275px;
	margin-left:25px;
	padding:25px;
	background:gainsboro;
}

section.vocabulary > ul {
}

ul.vocabulary-entries > li {
	padding-bottom:5px;
	padding-top:10px;
	border-bottom:1px solid #ccc;
}

i.expansion {
	display:inline-block;
	height:12px;
	width:12px;
	background: url(<%= asset_path "icons-12.png" %>) no-repeat 0 0;
	background-position: 0 -124px; width: 12px; height: 12px;
}

i.expansion.true {
	background-position: 0 -186px; width: 12px; height: 12px;
}

button.edit {
	display:inline-block;
	height:12px;
	width:12px;
	border: 1px solid #000;
	background: url(<%= asset_path "icons-12.png" %>) no-repeat 0 0;
	background-position: 0 -62px; width: 12px; height: 12px;
}

button.edit:hover {
	background-position: 0 0px; width: 12px; height: 12px;
}

button.edit:active {
	position:relative;
	top:1px;
}

input.editable-input {
	display:inline-block;
	padding:0;
	margin:0;
	outline:0;
	border:0;
	background:transparent;
	max-width:120px;
}

.editable-buttons > button {
	padding:1px;
	
}

i.delete {
	display:inline-block;
	height:12px;
	width:12px;
	background: url(<%= asset_path "icons-12.png" %>) no-repeat 0 0;
	background-position: 0 -310px; width: 12px; height: 12px;
}

i.delete:hover {
	background-position: 0 -248px; width: 12px; height: 12px;
}

i.delete:active {
	position:relative;
	top:2px;
}

section.vocabulary button {
	margin-top:5px;
	margin-bottom:5px;
}